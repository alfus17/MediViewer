@charset "UTF-8";

/*기본 백그라운드 설정*/
body {
    background-color: lightgrey;
    color: white;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

/* 큰 바운더리 */
section {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 90%;
	width: 90%;
}

/* 로그인 컨테이너 */
.login-container {
	width: 500px;
	height: 400px;
    padding: 20px;
    background-color: white;
    border: 1px solid lightgrey;
    border-radius: 10px;
    box-shadow: 0 4px 8px black;
    text-align: center;
}

/* 로그인 페이지 상단 로고 */
.logo {
	width: 300px;
}

/* 로그인 입력 area */
.input-area {
	margin-bottom: 30px;
}

/* 로그인 입력 부분 */
.input-area input {
	width: 95%;
	padding: 10px;
	margin: 10px 0;
	border: 1px solid lightgrey;
	border-radius: 5px;
	box-sizing: border-box;
}

/* 로그인 버튼 */
.login-button {
	background-color: lightgrey;
	width: 75px;
	height: 35px;
	text-align: center;
	border-radius: 5px;
	margin-top: 30px;
}


.login-button:hover {
	background-color: orangered;
}

h1 {
	color: black;
	text-align: left;
	padding-left: 20px;
}

div {
	margin-bottom: 7px;
}


